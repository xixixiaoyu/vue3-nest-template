# ============================================
# Docker Environment Configuration
# Copy this file to .env.docker and modify as needed
# ============================================

# Node Environment
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=myapp

# ============================================
# Backend Configuration
# ============================================
# JWT Secret - MUST be changed in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost

# ============================================
# Frontend Configuration
# ============================================
# API URL that the frontend will use to connect to backend
# In Docker network, use 'http://backend:3000' for internal communication
# For browser access, use the external URL (e.g., 'http://localhost:3000')
VITE_API_BASE_URL=http://localhost:3000
