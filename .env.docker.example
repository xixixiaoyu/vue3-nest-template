# ============================================
# Docker 环境配置
# 复制此文件为 .env.docker 并根据需要修改
# ============================================

# Node 环境
NODE_ENV=production

# ============================================
# 数据库配置
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=myapp

# ============================================
# Redis 配置
# ============================================
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=app:
REDIS_DEFAULT_TTL=300

# ============================================
# 后端配置
# ============================================
# 日志级别 (trace, debug, info, warn, error, fatal, silent)
LOG_LEVEL=info

# CORS (多个来源用逗号分隔)
CORS_ORIGIN=http://localhost:80

# JWT 密钥 - 生产环境中必须修改！
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=900         # 访问令牌过期时间（秒），默认 15 分钟
JWT_REFRESH_EXPIRES_IN=7d         # 刷新令牌过期时间，默认 7 天
RESET_PASSWORD_EXPIRES_IN=3600    # 密码重置令牌过期时间（秒），默认 1 小时

# ============================================
# 速率限制配置
# ============================================
THROTTLE_SHORT_TTL=1000
THROTTLE_SHORT_LIMIT=3
THROTTLE_MEDIUM_TTL=10000
THROTTLE_MEDIUM_LIMIT=20
THROTTLE_LONG_TTL=60000
THROTTLE_LONG_LIMIT=100

# ============================================
# 邮件配置 (SMTP)
# ============================================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM="No Reply" <noreply@example.com>

# ============================================
# 云存储配置 (S3/OSS/MinIO)
# ============================================
S3_BUCKET=my-app-uploads
S3_REGION=us-east-1
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# ============================================
# 文件上传限制
# ============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_FILES=10

