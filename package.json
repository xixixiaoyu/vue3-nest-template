{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "pnpm --filter @my-app/backend prisma:generate",
    "db:push": "pnpm --filter @my-app/backend prisma:push",
    "db:migrate": "pnpm --filter @my-app/backend prisma:migrate",
    "db:studio": "pnpm --filter @my-app/backend prisma:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
