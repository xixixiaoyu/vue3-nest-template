# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/myapp?schema=public"

# Redis（Bull 队列 & 缓存依赖）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=app:
REDIS_DEFAULT_TTL=300          # 默认缓存过期时间（秒）

# Backend
PORT=3000
NODE_ENV=development

# 日志级别 (trace, debug, info, warn, error, fatal, silent)
LOG_LEVEL=debug

# CORS (多个来源用逗号分隔)
CORS_ORIGIN=http://localhost:5173

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d                 # 令牌过期时间，默认 7 天

# 速率限制配置
THROTTLE_SHORT_TTL=1000          # 短期限制时间窗口（毫秒）
THROTTLE_SHORT_LIMIT=3           # 短期限制次数
THROTTLE_MEDIUM_TTL=10000        # 中期限制时间窗口（毫秒）
THROTTLE_MEDIUM_LIMIT=20         # 中期限制次数
THROTTLE_LONG_TTL=60000          # 长期限制时间窗口（毫秒）
THROTTLE_LONG_LIMIT=100          # 长期限制次数

# 邮件配置 (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false                # true for 465, false for 587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM="No Reply" <noreply@example.com>

# 云存储配置 (S3/OSS/MinIO)
S3_BUCKET=my-app-uploads
S3_REGION=us-east-1
S3_ENDPOINT=                     # 可选，用于 OSS/MinIO，例如: https://oss-cn-hangzhou.aliyuncs.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# 文件上传限制
UPLOAD_MAX_SIZE=10485760         # 最大文件大小（字节），默认 10MB
UPLOAD_MAX_FILES=10              # 最大文件数量
